{
  "name": "Docs Hotkey",
  "version": "0.1",
  "description": "An extension that allows the user to create hotkeys with Google Docs.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "commands": {
    "slot1": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "slot1"
    },
    "slot2": {
      "description": "slot2"
    },
    "slot3": {
      "description": "slot3"
    },
    "slot4": {
      "description": "slot4"
    },
    "slot5": {
      "description": "slot5"
    },
    "slot6": {
      "description": "slot6"
    },
    "slot7": {
      "description": "slot7"
    },
    "slot8": {
      "description": "slot8"
    },
    "slot9": {
      "description": "slot9"
    }
  },
  "browser_action": {
    "default_title": "Docs Hotkey",
    "default_popup": "src/popup/popup.html"
  },
  "manifest_version": 2,
  "icons": {
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  }
}