{
  "name": "Docs Hotkey",
  "version": "0.1",
  "description": "An extension that allows the user to create hotkeys with Google Docs.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "Program events"
  },
  "manifest_version": 2,
  "commands": {
    "highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Highlight with Google Docs"
    }
  }
}